@model RedisShop.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login page";
}

<style>
    .btn-animated {
        transition: all 0.5s ease;
    }
    .btn-animated:hover {
        background-color: rgba(23, 160, 96, 1);
        border-color: rgba(23, 160, 96, 1);
        box-shadow: 0 4px 20px rgba(25, 135, 84, 0.4);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-success">Welcome Back</h2>
                        <p class="text-muted">Please login to your account</p>
                    </div>

                    @if (TempData["Success"] is not null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Login" class="form-control" id="floatingInput" placeholder="Enter login..." />
                            <label for="floatingInput">Login</label>
                            <span asp-validation-for="Login" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                            <label for="floatingPassword">Password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg btn-animated">
                                Login
                            </button>
                        </div>
                    </form>

                </div>

                <div class="card-footer text-center py-3 bg-light border-0 rounded-bottom-3">
                    <span class="text-muted">Don't have an account yet?</span>
                    <a asp-action="Register" class="text-success fw-bold text-decoration-none ms-1">Register</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using RedisShop.Models
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">Our offer</h1>
</div>
<div class="container">
    @if (Model is not null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Add to cart</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>
                            @if (product.AvailableStock > 0)
                            {
                                <span class="text-success">@product.AvailableStock</span>
                            }
                            else
                            {
                                <span class="text-success">Out of stock</span>
                            }
                        </td>
                        <td>
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit"
                                    class="btn btn-sm @(product.AvailableStock > 0 ? "btn-success" : "btn-secondary") "
                                    @(product.AvailableStock == 0 ? "disabled" : "")>
                                    🛒
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning">No products in DB!</p>
    }
</div>

<div>
    <form asp-action="AddTestProduct" method="post">
        <button type="submit">
            + Add test product
        </button>
    </form>
</div>
